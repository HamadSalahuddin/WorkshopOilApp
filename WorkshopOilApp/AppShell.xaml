<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkshopOilApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WorkshopOilApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="WorkshopOilApp">

    <ShellContent Route="LoginPage"
                  ContentTemplate="{DataTemplate local:LoginPage}"
                  Shell.FlyoutItemIsVisible="False" />
    <ShellContent Route="RegisterPage"
                  ContentTemplate="{DataTemplate local:RegisterPage}"
                  Shell.FlyoutItemIsVisible="False" />
    <ShellContent Route="ForgotPasswordPage"
                  ContentTemplate="{DataTemplate local:ForgotPasswordPage}"
                  Shell.FlyoutItemIsVisible="False" />

    <FlyoutItem Title="Customers">
        <ShellContent Route="CustomerListPage" ContentTemplate="{DataTemplate local:CustomerListPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Lubricants">
        <ShellContent Route="LubricantListPage" ContentTemplate="{DataTemplate local:LubricantListPage}" />
    </FlyoutItem>

    <FlyoutItem Title="User Profile">
        <ShellContent Route="UserProfilePage" ContentTemplate="{DataTemplate local:UserProfilePage}" />
    </FlyoutItem>

    <MenuItem Text="Logout" Clicked="OnLogoutClicked" />

</Shell>
