<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorkshopOilApp.ViewModels"
             x:Class="WorkshopOilApp.Views.CustomerListPage"
             Title="Customers"
             BackgroundColor="{AppThemeBinding Light=#F8FAFC, Dark={StaticResource Gray950}}"
             x:DataType="vm:CustomerListViewModel">

    <ContentPage.BindingContext>
        <vm:CustomerListViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <SearchBar Placeholder="Search by name or registration..."
                   Text="{Binding SearchText, Mode=TwoWay}"
                   TextChanged="OnSearchTextChanged"
                   Margin="10,10,10,0" />

        <!-- Main List -->
        <RefreshView Grid.Row="1"
                     Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsRefreshing}">

            <CollectionView ItemsSource="{Binding Customers}"
                            RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}"
                RemainingItemsThreshold="3">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:CustomerCardViewModel">
                        <Frame Margin="12,6" 
                               CornerRadius="16"
                               HasShadow="True"
                               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                               Padding="16">

                            <Grid ColumnDefinitions="*,Auto">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Name + Phone -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding FullName}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                      TextColor="{AppThemeBinding Light={StaticResource HeadingColorLight}, Dark={StaticResource HeadingColorDark}}" />

                                <Label Grid.Row="0" Grid.Column="1"
                                       Text="{Binding PhoneContact}"
                                       FontSize="14"
                                       TextColor="#64748B" />

                                <!-- Vehicles Summary -->
                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="{Binding VehicleSummary}"
                                       FontSize="14"
                                       TextColor="#475569" />

                                <CollectionView Grid.Row="2"
                                                ItemsSource="{Binding VehicleStatuses}"
                                                Grid.ColumnSpan="2">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="vm:VehicleEngineOilStatus">
                                            <Grid ColumnDefinitions="*,Auto">
                                                <Border Grid.Column="0"
                                                       BackgroundColor="{Binding StatusColor}"
                                                       Padding="10,6"
                                                       HorizontalOptions="Start">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="20" />
                                                    </Border.StrokeShape>
                                                    <Label Text="{Binding StatusText}"
                                                           TextColor="White"
                                                           FontSize="13"
                                                           FontAttributes="Bold" />
                                                </Border>
                                                <VerticalStackLayout Grid.Column="1">
                                                    <Label  Text="{Binding Registration}"
                                                            FontSize="12"
                                                            TextColor="#64748B" 
                                                            HorizontalOptions="Start"
                                                            WidthRequest="90"/>
                                                    <!-- Days Left -->
                                                    <Label Grid.Column="1"
                                                           Text="{Binding DaysText}"
                                                           FontSize="14"
                                                           TextColor="{Binding DaysTextColor}"
                                                           WidthRequest="90"
                                                           HorizontalOptions="Start" />
                                                </VerticalStackLayout>

                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectCustomerCommand}"
                                                        CommandParameter="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext}" />
                                                </Grid.GestureRecognizers>

                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                            </Grid>

                            <!-- Tap to open detail -->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CustomerListViewModel}}, Path=SelectCustomerCommand}"
                                                      CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Empty State -->
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="30" Spacing="20">
                        <Image Source="empty_customers.png" HeightRequest="120" Opacity="0.6" />
                        <Label Text="No customers yet" FontSize="20" HorizontalOptions="Center" />
                        <Label Text="Tap + to add your first customer" 
                               TextColor="#64748B" 
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <!-- Add Footer to show loading state -->
                <CollectionView.Footer>
                    <Grid HeightRequest="60" IsVisible="{Binding IsBusy}">
                        <ActivityIndicator IsRunning="True" 
                                         Color="#3B82F6"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"/>
                    </Grid>
                </CollectionView.Footer>
            </CollectionView>

        </RefreshView>

        <!-- Floating + Button -->
        <Button Grid.Row="1"
                Text="+"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="White"
                BackgroundColor="#10B981"
                CornerRadius="30"
                WidthRequest="60"
                HeightRequest="60"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"
                Command="{Binding AddCustomerCommand}">
            <Button.Shadow>
                <Shadow Brush="#10B981" Opacity="0.4" Radius="15" Offset="0,8"/>
            </Button.Shadow>
        </Button>
    </Grid>
</ContentPage>